@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}


<body class="pedro">

<div class="row justify-content-center">
    <div class="col-md-4">
        <div class="card p-3 mt-4">
            <div class="card-body p-4">
                <h5 class="card-title mb-2 text-center"><b><strong>CONTROL HORARIO</strong></b></h5>
                <form asp-action="LoginIn" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group m-2">
                        <input asp-for="Rut" class="form-control" placeholder="RUT" />
                        <span class="text-danger"></span>
                    </div>
                    <div class="form-group m-2">
                        <input asp-for="Password"  type="password" class="form-control" placeholder="Contraseña" />
                        <span class="text-danger"></span>
                    </div>
                    <input type="submit"
                       class="btn btn-outline-success col-12" />
                </form>
            </div>
        </div>
    </div>
</div>
</body>